<UserControl x:Class="GItClient.MVVM.View.MainView.HelloView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GItClient.MVVM.View.MainView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <TextBlock Text="Welcome to Git EasyClient"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"/>

        <StackPanel Orientation="Horizontal" Height="200">

            <Border Width="300"
                    Height="150">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" 
                                         EndPoint="1,2">
                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                        <GradientStop Color="#3aa0ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,300,150"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="Check our website for news"
                                   Foreground="White"
                                   FontSize="22"
                                   Margin="10,10,0,0"/>
                        <TextBlock Text="https://easyclient.com"
                                   Foreground="White"
                                   FontSize="18"
                                   Margin="10,0,10,0"/>

                    </StackPanel>
                </Grid>

            </Border>

            <Border Width="150"
                    Height="150"
                    CornerRadius="10"
                    Margin="45,0,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" 
                                         EndPoint="1,2">
                        <GradientStop Color="#ffcc54" Offset="0.0"/>
                        <GradientStop Color="#ffb73e" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="Connect"
                                   Foreground="White"
                                   FontSize="22"
                                   Margin="10,10,0,0"/>
                    <TextBlock Text="Login"
                                   Foreground="White"
                                   FontSize="18"
                                   Margin="10,0,10,0"/>

                </StackPanel>
            </Border>

        </StackPanel>

    </StackPanel>
</UserControl>
